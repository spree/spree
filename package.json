{
  "name": "spree",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "docker compose up -d && turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "backend:build": "docker compose build backend",
    "backend:up": "docker compose up -d",
    "backend:down": "docker compose down",
    "backend:logs": "docker compose logs -f backend",
    "backend:seed": "docker compose exec backend bin/rails db:seed",
    "backend:load_sample_data": "docker compose exec backend bin/rails spree:load_sample_data",
    "backend:console": "docker compose exec backend bin/rails c"
  },
  "devDependencies": {
    "turbo": "^2.5.0"
  },
  "packageManager": "pnpm@10.6.0",
  "engines": {
    "node": ">=20"
  }
}
