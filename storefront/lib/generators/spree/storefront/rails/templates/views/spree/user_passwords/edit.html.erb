<%%= turbo_frame_tag :reset_password do %>
  <div class="card-dialog max-w-xl mx-auto py-10 px-4">
    <h2 class="text-xl lg:text-2xl font-medium mb-4"><%%= Spree.t(:reset_password) %></h2>
    <p class="text-sm text-muted mb-4"><%%= Spree.t(:enter_new_password) %></p>

    <%%= form_with url: spree.user_password_path(params[:token]), method: :patch, data: { turbo: false } do |f| %>
      <div class="flex flex-col mb-4">
        <%%= f.label :password, Spree.t(:new_password) %>
        <%%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'text-input', required: true, maxlength: 72 %>
      </div>
      <div class="flex flex-col mb-4">
        <%%= f.label :password_confirmation, Spree.t(:confirm_password) %>
        <%%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-input', required: true, maxlength: 72 %>
      </div>
      <div class="actions">
        <%%= f.submit Spree.t(:update_password), class: 'btn btn-primary w-full' %>
      </div>
    <%% end %>

    <div class="mt-4 text-center">
      <p class="text-sm text-muted">
        <%%= link_to Spree.t(:back_to_login), spree.new_user_session_path, class: 'text-link' %>
      </p>
    </div>
  </div>
<%% end %>
