<%%= turbo_frame_tag :forgot_password do %>
  <div class="card-dialog max-w-xl mx-auto py-10 px-4">
    <h2 class="text-xl lg:text-2xl font-medium mb-4"><%%= Spree.t(:forgot_password) %></h2>
    <p class="text-sm text-muted mb-4"><%%= Spree.t(:forgot_password_instructions) %></p>

    <%%= form_with url: spree.user_passwords_path, method: :post, data: { turbo: false } do |f| %>
      <div class="flex flex-col mb-4">
        <%%= f.label :email_address, Spree.t(:email) %>
        <%%= f.email_field :email_address, autofocus: true, autocomplete: "username", class: 'text-input', required: true %>
      </div>
      <div class="actions">
        <%%= f.submit Spree.t(:send_reset_instructions), class: 'btn btn-primary w-full' %>
      </div>
    <%% end %>

    <div class="mt-4 text-center">
      <p class="text-sm text-muted">
        <%%= link_to Spree.t(:back_to_login), spree.new_user_session_path, class: 'text-link' %>
      </p>
    </div>
  </div>
<%% end %>
