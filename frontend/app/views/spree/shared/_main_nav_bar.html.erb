<% if top_level_items_for_menu('spree-all-main').present? %>
  <% category = 'category' %>
  <% promo = 'promo' %>

  <div class="h-100" role="navigation" aria-label="<%= Spree.t('nav_bar.desktop') %>">
    <ul class="nav h-100 main-nav-bar">
      <% top_level_items_for_menu('spree-all-main').each do |parent| %>
          <li class="p-0 nav-item main-nav-bar-category">
            <% has_dropdown = parent.children.present? %>
            <% dropdown_toggle_class = has_dropdown ? "dropdown-toggle" : "" %>
            <% data_attr = has_dropdown ? { toggle: "dropdown" } : {} %>
            <% aria_attr = has_dropdown ? { haspopup: true, expanded: false } : {} %>
            <%= link_to(parent.name, localized_item_link(parent, current_locale), class: "nav-link main-nav-bar-item main-nav-bar-category-button #{dropdown_toggle_class}", data: data_attr, aria: aria_attr) %>
             <% if has_dropdown %>
              <div class="dropdown-menu w-100 shadow main-nav-bar-category-dropdown">
                <div class="container p-0 d-flex justify-content-xl-around mx-auto">
                  <div class="row px-5">
                    <% parent.children.each do |child| %>

                      <!-- Categories -->
                      <% if child.code == category && child.item_type == 'Container' %>
                        <div class="category-links my-4 mx-2">
                          <div class="category-links-header text-uppercase">
                            <%= child.name %>
                          </div>
                          <% if child.children.present? %>
                            <ul class="pl-0">
                              <% child.children.each do |category_link| %>
                                <li>
                                  <%= link_to category_link.name, localized_item_link(category_link, current_locale), class: "text-uppercase main-nav-bar-category-links dropdown-item truncate" %>
                                </li>
                              <% end %>
                            </ul>
                          <% end %>
                        </div>
                      <% end %>

                      <!-- Promos -->
                      <% if child.code == promo && child.item_type == 'Container' %>
                        <% if child.children.present? %>
                          <% child.children.each do |promo_banner| %>
                            <%= link_to localized_item_link(promo_banner, current_locale), class: "dropdown-item" do %>
                              <div class="category-image text-center my-4 mx-3">
                                <% if promo_banner.menu_item_image.present? %>
                                  <%= image_tag main_app.url_for(promo_banner.menu_item_image.attachment), alt: promo_banner.menu_item_image.alt ,title: promo_banner.subtitle %>
                                <% end %>
                                <div class="category-box">
                                  <div class="category-box-small-text">
                                    <%= promo_banner.subtitle %>
                                  </div>
                                  <div class="category-box-big-text">
                                    <%= promo_banner.name %>
                                  </div>
                                </div>
                              </div>
                            <% end %>
                          <% end %>
                        <% end %>
                      <% end %>

                    <% end %>
                  </div>
                </div>
              </div>

             <% end %>
          </li>

      <% end %>
    </ul>
  </div>
<% end %>
