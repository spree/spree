<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "spree/admin/shared/head" %>
  </head>

  <body class="admin min-vh-100 <%= controller_name %> <%= action_name %>"
    data-controller="admin"
    data-action="keydown.esc->admin#close keydown.ctrl+s->admin#save keydown.meta+s->admin#save"
  >
    <%= render_admin_partials(:body_start_partials) %>

    <%= render "spree/admin/shared/header_minimal" %>

    <main id="content" data-controller="drawer">
      <%= render "spree/admin/shared/content_header" %>
      <div class="container">
        <%= yield %>
      </div>
      <%= render "spree/admin/shared/footer" %>
      <%= render 'spree/admin/shared/drawer' %>
    </main>
    <%= render "spree/admin/shared/modal" %>
    <%= render "spree/admin/shared/alerts" %>

    <%= render_admin_partials(:body_end_partials) %>
  </body>
</html>
