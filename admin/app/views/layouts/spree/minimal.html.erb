<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "spree/admin/shared/head" %>
  </head>
  <body class="admin min-vh-100 <%= controller_name %> <%= action_name %>" data-controller="dialog">
    <div class="container">
      <div class="grid grid-cols-12 gap-4 bg-white">
        <div
          class="col-span-12 lg:col-span-5 d-none d-lg-flex bg-light min-vh-100"
          style="background-image: url('<%= asset_path('login_sidebar_background.png') %>');background-repeat: no-repeat;background-size: cover;background-position: center')"
        >
        </div>
        <div class="col-span-12 lg:col-span-6 xl:col-span-4 xl:col-start-2 py-3 d-flex flex-column justify-content-center vh-100">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render "spree/admin/shared/dialog" %>
    <%= render "spree/admin/shared/modal" %>
    <%= render "spree/admin/shared/alerts" %>
  </body>
</html>
