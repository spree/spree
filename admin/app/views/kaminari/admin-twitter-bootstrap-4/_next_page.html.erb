<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>

<li class="next page-item">
  <% if current_page.last? %>
    <button class="btn btn-light p-2 cursor-not-allowed opacity-50" disabled>
      <%= icon('chevron-right', class: 'text-gray-900 mr-0') %>
    </button>
  <% else %>
    <%= link_to icon('chevron-right', class: 'text-gray-900 mr-0'), url, rel: 'next', remote: remote, class: "btn btn-light p-2", 'aria-label': 'Next page' %>
  <% end %>

</li>

