<% args = params.clone %>
<% entry_name ||= nil %>

<% if defined?(per_page_action) %>
  <% args[:action] = per_page_action %>
<% end %>

<% if collection.any? && collection.respond_to?(:current_page) %>
  <div class="pagination-container">
    <div class="index-pagination-row flex items-center justify-between p-2">
      <%= per_page_dropdown %>
      <div class="hidden lg:block text-center text-gray-600 text-sm">
        <%= page_entries_info(collection, entry_name: entry_name) %>
      </div>
      <div class="text-right">
        <%= paginate collection, theme: 'admin-twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
<% end %>
