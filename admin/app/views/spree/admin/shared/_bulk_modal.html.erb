<%= dialog(id: 'bulk-dialog', controller_name: 'bulk-dialog') do %>
  <%= turbo_frame_tag :bulk_dialog do %>
    <%= dialog_header(Spree.t(:loading), 'bulk-dialog') %>
    <div class="dialog-body text-center">
      <div class="flex flex-col w-full h-full items-center justify-center">
        <div class="inline-block w-8 h-8 border-4 border-current border-r-transparent rounded-full animate-spin text-gray-300 align-middle opacity-50 mb-3" role="status">
          <span class="sr-only"><%= Spree.t(:loading) %>...</span>
        </div>
        <span class="text-gray-300"><%= Spree.t(:loading) %>...</span>
      </div>
    </div>
  <% end %>
<% end %>
