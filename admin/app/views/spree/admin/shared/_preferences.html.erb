<% if object.preferences.present? %>
  <p class="mb-0">
  <% object.preferences.each do |key, value| %>
      <% next if value.blank? && key != :max_quantity %>
      <% next if key == :eligible_values %>
      <span><%= Spree.t(key) %>:</span>
      <strong><%= format_preference_value(key, value) %></strong>
    <% end %>
  </p>
<% end %>
