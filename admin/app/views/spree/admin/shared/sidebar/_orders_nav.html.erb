<% orders_active = %[orders checkouts return_index customer_returns].include?(controller_name) || @order %>
<li class="nav-item">
  <%= active_link_to spree.admin_orders_path, class: 'nav-link  d-flex align-items-center', active: orders_active do %>
    <%= icon 'inbox', class: 'mr-1' %>
    <%= Spree.t(:orders) %>

    <% if ready_to_ship_orders_count&.positive? %>
      <span class="badge  ml-auto">
        <%= ready_to_ship_orders_count %>
      </span>
    <% end %>
  <% end %>
  <% if orders_active && (ready_to_ship_orders_count&.positive? || can?(:manage, :customer_returns) || can?(:manage, :checkouts)) %>
    <ul class="ml-4 pl-1 mb-2 nav-submenu flex-column mt-1">
      <% if ready_to_ship_orders_count&.positive? %>
        <li class="nav-item">
          <%= active_link_to spree.admin_orders_path(q: {shipment_state_not_in: [:shipped, :canceled]}), class: 'nav-link  d-flex align-items-center', active: params.dig(:q, :shipment_state_not_in).present? do %>
            <span><%= Spree.t('admin.orders.orders_to_fulfill') %></span>
            <span class="badge  ml-auto">
              <%= ready_to_ship_orders_count %>
            </span>
          <% end %>
        </li>
      <% end %>

      <% if can?(:manage, :customer_returns) %>
        <li class="nav-item">
          <%= active_link_to Spree.t(:returns), spree.admin_customer_returns_path, class: 'nav-link' %>
        </li>
      <% end %>

      <% if can?(:manage, :checkouts) %>
        <li class="nav-item">
          <%= active_link_to Spree.t(:draft_orders), spree.admin_checkouts_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  <% end %>
</li>
