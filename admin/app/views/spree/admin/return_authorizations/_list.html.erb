<% if @collection.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead class="text-muted">
        <tr>
          <th><%= Spree.t(:number) %></th>
          <th><%= Spree.t(:created_at) %></th>
          <th><%= Spree.t(:customer) %></th>
          <th class="text-center w-10"><%= Spree.t(:status) %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "spree/admin/return_authorizations/return_authorization",
        collection: @collection,
        cached: spree_base_cache_scope %>
      </tbody>
    </table>
  </div>
<% else %>
  <div
    class="
      text-muted p-5 d-flex align-items-center w-100 justify-content-center
    "
  >
    <%= Spree.t(
      :no_resource_found,
      resource: plural_resource_name(Spree::ReturnAuthorization),
    ) %>.
  </div>
<% end %>
