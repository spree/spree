<%= render 'spree/admin/orders/header' %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @return_authorization } %>
<%= form_for [:admin, @order, @return_authorization] do |f| %>
  <fieldset>
    <%= render 'form', f: f %>

    <div class="form-actions">
      <%= button Spree.t(:create) %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_order_return_authorizations_path(@order), icon: 'cancel.svg' %>
    </div>
  </fieldset>
<% end %>
