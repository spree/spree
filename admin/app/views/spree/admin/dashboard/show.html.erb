<div class="row pt-3">
  <div class="col-12">
    <h2 class="page-header-title">
      <%= Spree.t('admin.dashboard.hi') %> <%= try_spree_current_user.first_name %>!
    </h2>
    <p>
      <%= Spree.t('admin.dashboard.whats_happening_on', store_name: current_store.name).html_safe %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="mb-2 d-flex gap-2">
      <%= form_tag spree.admin_dashboard_analytics_path, method: :get, data: { turbo_frame: :analytics } do %>
        <%= hidden_field_tag :vendor_id, @vendor.id if @vendor.present? %>
        <%= render 'spree/admin/shared/calendar_range_picker',
          date_from_value: params[:date_from] || 1.month.ago.beginning_of_month,
          date_to_value: params[:date_to] || 1.month.ago.end_of_month %>
      <% end %>
    </div>
    <%= render 'analytics' %>
  </div>
  <div class="col-lg-4">
    <% if defined?(current_vendor) && current_vendor %>
      <%= render 'spree/admin/shared/vendor_faq' %>
    <% else %>
      <%= render 'store_preview' %>
      <%= render 'vendors' if defined?(Spree::Vendor) %>
    <% end %>
</div>
