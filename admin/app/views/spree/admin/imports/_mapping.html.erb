<div class="d-flex justify-content-between align-items-center border-bottom hover-light" id="<%= spree_dom_id(mapping) %>">
  <div class="text-center w-10">
    <%= render 'spree/admin/imports/mapping_icon', mapping: mapping %>
  </div>
  <div class="text-wrap w-40 px-2 py-3">
    <%= @import.import_schema.fields.find { |field| field[:name] == mapping.schema_field }[:label] %>

    <code class="ml-2"><%= mapping.schema_field %></code>
  </div>
  <div class="w-50 px-2 py-3">
    <%= render 'spree/admin/imports/mapping_form', import: @import, mapping: mapping, options: options %>
  </div>
</div>