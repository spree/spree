<% if @import.persisted? %>
  <%= turbo_stream.update 'drawer' do %>
    <script>
      window.Turbo.visit("<%= spree.admin_import_path(@import) %>", { action: 'replace' })
    </script>

    <%= drawer_header(Spree.t(:import) + ' ' + Spree.t(@import.type.demodulize.pluralize)) %>

    <div class="drawer-body">
      <div class="d-flex justify-content-center align-items-center my-5 flex-column" style="height: 200px;">
        <div class="spinner-border mb-3 text-muted" role="status" style="width: 4rem; height: 4rem;">
          <span class="sr-only"><%= Spree.t(:processing) %>...</span>
        </div>
        <p class="text-muted"><%= Spree.t(:processing) %>...</p>
      </div>
    </div>
  <% end %>
<% else %>
  <%= turbo_render_alerts :drawer_alerts %>
<% end %>