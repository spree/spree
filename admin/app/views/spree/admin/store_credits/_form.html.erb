<div data-hook='admin_store_credit_form_fields'>
  <div class="row mb-2">
    <div class="col-6">
      <div class="form-group">
        <%= f.label :amount, raw(Spree.t(:amount) + required_span_tag) %>
        <%= f.number_field :amount, class: 'form-control', step: 0.01, required: true, disabled: !f.object.editable? %>
        <%= f.error_message_on :amount %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <%= f.label :currency, raw(Spree.t(:currency) + required_span_tag), class: 'form-label' %>
        <%= f.currency_select :currency, preferred_currencies, {}, { data: { controller: 'autocomplete-select', enable_button_target: 'input', store_form_target: 'currency' } } %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :memo, Spree.t(:memo) %>
    <%= f.text_area :memo, class: 'form-control' %>
    <%= f.error_message_on :memo %>
  </div>
</div>
