<% content_for :title do %>
  <%= Spree.t(:store_credit_name) %>
<% end %>

<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_user_path(@user) %>
  <%= Spree.t(:new_store_credit) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @store_credit } %>

<%= form_for @store_credit, url: spree.admin_user_store_credits_path(@user, @store_credit) do |f| %>
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="card-title">
        <%= Spree.t(:store_credit_name) %>
      </h5>
    </div>

    <div class="card-body">
      <%= render 'form', f: f %>
    </div>
  </div>

  <%= render partial: 'spree/admin/shared/new_resource_links', locals: { collection_url: spree.admin_user_store_credits_path(@user) } %>
<% end %>
