<%= content_for(:page_title) do %>
  <%= Spree.t(:integrations) %>
<% end %>

<% content_for :page_actions do %>
  <%= render_admin_partials(:integrations_actions_partials) %>
<% end %>

<%= render_admin_partials(:integrations_header_partials) %>

<div class="grid grid-cols-12 gap-6">
  <div class="col-span-12 lg:col-span-8 lg:col-start-3">
    <div class="alert alert-info mb-6">
      <%= Spree.t('admin.integrations.page_subtitle') %>
    </div>

    <% if grouped_available_store_integrations.any? %>
      <% grouped_available_store_integrations.each do |group, integrations| %>
        <% if group.present? %>
          <div class="my-2 text-gray-600 font-light uppercase"><%= Spree.t(group) %></div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
          <% integrations.each do |integration| %>
            <%= render 'spree/admin/integrations/integration', integration_class: integration %>
          <% end %>
        </div>
      <% end %>

      <p class="text-gray-600 text-center my-12">
        Find more integrations in <%= external_link_to 'Integrations Directory', 'https://spreecommerce.org/docs/integrations/integrations', class: 'no-underline font-bold', target: '_blank' %>
      </p>
    <% else %>
      <p class="text-gray-600 text-center my-12">
        No integrations installed yet. Find integrations in 

        <%= external_link_to 'Integrations Directory', 'https://spreecommerce.org/docs/integrations/integrations', class: 'no-underline font-bold', target: '_blank' %>
      </p>
    <% end %>
  </div>
</div>
