<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_posts_path, @post %>
  <%= Spree.t(:new_post) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @post } %>

<%= form_for [:admin, @post] do |f| %>
  <%= render 'form', f: f %>
  <%= render 'spree/admin/shared/new_resource_links' %>
<% end %>
