<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_posts_path, @post %>
  <%= @post.title %>
<% end %>

<% content_for :page_actions_dropdown do %>
  <%= external_page_preview_link(@post) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @post } %>

<%= form_for [:admin, @post] do |f| %>
  <%= render 'form', f: f %>
  <%= render 'spree/admin/shared/edit_resource_links', f: f %>
<% end %>
