<table class="table">
  <thead class="text-muted">
    <tr>
      <% if @product.has_variants? %>
        <th><%= Spree.t(:variant) %></th>
      <% end %>
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:size) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% if @product.has_variants? %>
      <% @product.variants.includes(digitals: {attachment_attachment: [:blob]}).each do |variant| %>
        <% variant.digitals.each do |digital_asset| %>
          <%= render "spree/admin/digital_assets/digital_asset",
          product: @product,
          digital_asset: digital_asset %>
        <% end %>
      <% end %>
    <% else %>
      <% @product.master.digitals.includes( attachment_attachment: [:blob]).each do |digital_asset| %>
        <%= render "spree/admin/digital_assets/digital_asset",
        product: @product,
        digital_asset: digital_asset %>
      <% end %>
    <% end %>
    <% if @product.digitals.empty? %>
      <tr>
        <td colspan="4">
          <div
            class="
              text-muted p-5 d-flex align-items-center w-100 justify-content-center
            "
          >
            <%= Spree.t(:no_resource_found, resource: Spree.t(:digital_assets)) %>
            <% if can?(:create, Spree::Digital.new(variant: @product.default_variant)) %>
              <span data-toggle="modal" data-target="#modal">
                <%= link_to_with_icon "plus",
                Spree.t(:add_one),
                spree.new_admin_product_digital_asset_path(@product),
                class: "btn btn-light ml-3",
                data: {
                  turbo_frame: "dialog_modal",
                } %>
              </span>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
