<div class="table-responsive card-lg p-0">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= Spree.t(:number) %></th>
        <th><%= Spree.t(:total) %></th>
        <th><%= Spree.t(:status) %></th>
        <th><%= "#{Spree.t("date")}/#{Spree.t("time")}" %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% reimbursements.each do |reimbursement| %>
        <tr id="<%= spree_dom_id(reimbursement) %>" data-hook="reimbursement_row">
          <td class="font-weight-bold">
            <% if reimbursement.reimbursed? %>
              <%= link_to reimbursement.number, url_for([:admin, @order, reimbursement]) %>
            <% else %>
              <%= link_to reimbursement.number, url_for([:edit, :admin, @order, reimbursement]) %>
            <% end %>
          </td>
          <td><%= reimbursement.display_total %></td>
          <td>
            <span class="badge badge-<%= reimbursement_status_color(reimbursement) %>">
              <%= reimbursement.reimbursement_status %>
            </span>
          </td>
          <td><%= local_time(reimbursement.created_at) %></td>
          <td class="actions">
            <% if !reimbursement.reimbursed? %>
              <%= if can?(:edit, reimbursement)
                link_to_edit_url(
                  url_for([:edit, :admin, @order, reimbursement]),
                  title: "admin_edit_#{dom_id(reimbursement)}",
                  no_text: true,
                )
              end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
