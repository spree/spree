<% if @user.valid? %>
  <%= turbo_stream.append :modal_scripts  do %>
    <%= javascript_tag do %>
      Turbo.visit("<%= spree.edit_admin_order_path(@order) %>", { action: "replace" })
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.replace dom_id(@order, :customer_information) do %>
    <%= render template: 'spree/admin/orders/user/new', locals: { show_form: true } %>
  <% end %>
<% end %>
<%= turbo_render_alerts %>
