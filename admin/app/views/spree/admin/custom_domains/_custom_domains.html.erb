<% if current_store.custom_domains.any? %>
  <div class="table-responsive rounded mt-3 border">
    <table class="table">
      <thead>
        <tr>
          <th><%= Spree.t(:name) %></th>
          <th><%= Spree.t(:active) %></th>

          <% unless entri_enabled? %>
            <th><%= Spree.t(:default) %></th>
            <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render collection: current_store.custom_domains, partial: 'spree/admin/custom_domains/custom_domain', cached: spree_base_cache_scope %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-muted p-5 d-flex align-items-center w-100 justify-content-center">
    <%= Spree.t(:no_custom_domains) %>
  </div>
<% end %>
