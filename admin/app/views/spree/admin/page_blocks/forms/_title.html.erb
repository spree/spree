<% content_for(:design_tab) do %>
  <div class="form-group">
    <%= f.label :preferred_size %>
    <%= f.select :preferred_size, options_for_select(['small', 'medium', 'large'], @page_block.preferred_size), {  }, { class: 'custom-select', data: {  action: 'auto-submit#submit' } } %>
  </div>

  <div class="form-group">
    <%= f.label :preferred_text_alignment %>
    <%= f.select :preferred_text_alignment, options_for_select(['left', 'center', 'right'], @page_block.preferred_text_alignment), {}, { class: 'custom-select', data: {  action: 'auto-submit#submit' } } %>
  </div>

  <div class="form-group">
    <%= f.label :preferred_container_alignment %>
    <%= f.select :preferred_container_alignment, options_for_select(['left', 'center', 'right'], @page_block.preferred_container_alignment), {}, { class: 'custom-select', data: {  action: 'auto-submit#submit' } } %>
  </div>

  <%= render 'spree/admin/page_builder/labeled_range_input',
    f: f, field: :preferred_width_desktop, min: 1, max: 100, unit: '%',_label: 'Max heading width on desktop'
  %>
<% end %>
