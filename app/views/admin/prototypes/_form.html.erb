<table>
	<tr>
		<td><% t("name") %>: </td>
		<td>
			<%= f.text_field :name %>
		</td>
	</tr>
</table>
<br/>
<h3><% t("properties") %></h3>
<br/>
<ul id="properties">
	<% Property.sorted.each do |property| %>
		<li>
	  	<%= check_box_tag "property[id][]", "#{property.id}", @prototype.properties.include?(property) %>
	  	<%= property.name %>
		</li>
	<% end %>
</ul>
<!-- this div resets the crazy float stuff used to layout the checkboxes -->
<div style="clear:both"></div>