<% paginated_products = Spree::Config.searcher.products || products %>
<% if params[:keywords] %>
<h3><%= t(:search_results, :keywords => h(params[:keywords])) %></h3>
<% end %>
<% if products.empty? %>
  <%= t(:no_products_found) %>
<% end %>
<ul class="product-listing">
  <% products.each do |product| %>
    <% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
      <li id="product_<%= product.id %>">
        <%= link_to small_image(product), product %>
        <%= link_to product.name + "<span class='price selling'>#{product_price(product)}</span>", product, :class => 'info' %>
      </li>
    <% end %>
  <% end %>
</ul>
<hr class="space" />
<%= will_paginate(paginated_products, :previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;") %>
