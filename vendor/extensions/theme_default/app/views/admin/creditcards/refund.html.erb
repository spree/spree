<%= render :partial => 'admin/shared/order_tabs', :locals => {:current => "Creditcards"} %>

<% form_tag do %>
  <%= hidden_field_tag :txn_id, params[:txn_id] %>
  <h3><%= t('make_refund_for_transaction') %></h3>
  <fieldset>
    <p>
      <label for="amount"><%= t("amount") %></label>
      <%= text_field_tag :amount, params[:amount] %>
    </p>
    <p class="form-buttons">
      <%= button t("make_refund") %>
    </p>    
  </fieldset>
<% end %>
