<%= render :partial => 'admin/shared/configuration_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li>
      <%= button_link_to t("new_payment_method"), new_object_url, :icon => 'add'  %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= t("payment_methods") %></h1>

<table class="index">
  <thead>
    <th><%= t("name") %></th>
    <th><%= t("provider") %></th>
    <th><%= t("environment") %></th>
    <th><%= t("active") %></th>     
    <th><%= t("action") %></th>
  </thead>
  <tbody>
    <% @payment_methods.each do |method|%>
      <tr id="<%= dom_id method %>">
        <td width="120px"><%= method.name %></td>
        <td width="140px"><%= method.type %></td>
        <td width="100px"><%= method.environment.to_s.titleize %></td>
        <td width="60px"><%= method.active.to_s.titleize %></td>
        <td width="140px">
        	<%= link_to_edit method %> &nbsp;
        	<%= link_to_delete method %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>