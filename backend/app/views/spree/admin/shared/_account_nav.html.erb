<% if try_spree_current_user %>
  <ul class="nav navbar-nav align-items-end h-100 justify-content-center">
    <li class="dropdown user user-menu h-100">
      <div class="dropdown d-flex align-items-center h-100">
        <button class="dropdown-toggle btn btn-link text-white" data-toggle="dropdown">
          <i class="glyphicon glyphicon-user"></i>
          <span>
            <%= try_spree_current_user.email %> <i class="caret"></i>
          </span>
        </button>

        <ul class="dropdown-menu position-absolute">
          <% if spree.respond_to? :root_path %>
            <li class="dropdown-item">
              <%= link_to spree.root_path, target: :blank do %>
                <i class="glyphicon glyphicon-new-window"></i>
                &nbsp;
                <%= Spree.t(:back_to_store) %>
              <% end %>
            </li>
          <% end %>

          <% if can?(:manage, try_spree_current_user) %>
            <li class="dropdown-item">
              <%= link_to spree.edit_admin_user_path(try_spree_current_user) do %>
                <i class="glyphicon glyphicon-user"></i>
                &nbsp;
                <%= Spree.t(:account) %>
              <% end %>
            </li>
          <% end %>

          <% if spree.respond_to? :admin_logout_path %>
            <li class="dropdown-item">
              <%= link_to spree.admin_logout_path do %>
                <i class="glyphicon glyphicon-log-out"></i>
                &nbsp;
                <%= Spree.t(:logout) %>
              <% end %>
            </li>
          <% end %>

          <div class="dropdown-divider"></div>

          <li class="dropdown-item">
            <%= link_to 'http://guides.spreecommerce.org', target: :blank do %>
              <i class="glyphicon glyphicon-info-sign"></i>
              &nbsp;
              <%= Spree.t(:help_center) %>
            <% end %>
          </li>

          <li class="dropdown-item">
            <%= link_to 'http://slack.spreecommerce.org', target: :blank do %>
              <i class="glyphicon glyphicon-comment"></i>
              &nbsp;
              <%= Spree.t(:join_slack) %>
            <% end %>
          </li>

          <li class="dropdown-item">
            <%= link_to 'https://github.com/spree-contrib', target: :blank do %>
              <i class="glyphicon glyphicon-download"></i>
              &nbsp;
              <%= Spree.t(:extensions_directory) %>
            <% end %>
          </li>
        </ul>
      </div>

    </li>
  </ul>
<% end %>
