<div class="import_row flex justify-between items-center border-b hover:bg-gray-25" id="<%= dom_id(row) %>">
  <div class="text-center w-10">
    <%= row.row_number %>
  </div>
  <div class="whitespace-normal w-20 px-2 py-4">
    <% badge_class = case row.status
       when 'completed'
         'success'
       when 'failed'
         'danger'
       else
         'light'
       end %>
    <span class="badge badge-pill badge-<%= badge_class %>">
      <%= Spree.t(row.status) %>
    </span>
  </div>
  <div class="w-60 px-2 py-4">
    <% if row.status == 'failed' %>
      <div class="text-danger"><%= row.validation_errors %></div>
    <% elsif row.status == 'completed' && row.item.present? %>
      <%= render "spree/admin/import_rows/#{import.item_partial_name}", item: row.item %>
    <% else %>
      <div class="flex items-center gap-2">
        <div class="inline-block w-5 h-5 border-2 border-current border-r-transparent rounded-full animate-spin text-gray-600" role="status">
          <span class="sr-only"><%= Spree.t(:processing) %>...</span>
        </div>
        <%= Spree.t(:processing) %>...
      </div>
    <% end %>
  </div>
  <div class="w-10 px-2 py-4">
    <%= link_to_with_icon 'eye', Spree.t(:details), spree.admin_import_row_path(import, row), class: 'btn btn-sm btn-light', data: { action: 'drawer#open', turbo_frame: :drawer }, no_text: true %>
  </div>
</div>